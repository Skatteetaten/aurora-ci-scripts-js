{
  "name": "@skatteetaten/ci-scripts",
  "groupId": "no.skatteetaten.aurora",
  "version": "2.0.0",
  "description": "",
  "author": "Aurora OpenShift Utvikling",
  "license": "Apache-2.0",
  "bin": {
    "aurora-ci-scripts": "./lib/bin/index.js"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://nexus-npm.aurora.skead.no/npm/repository/npm-internal/"
  },
  "scripts": {
    "prebuild": "npm-run-all -l clean lint",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "clean": "rimraf lib *.tgz coverage"
  },
  "dependencies": {
    "aurora-artifact-deployer": "1.0.0",
    "npm-bundled": "1.0.6",
    "tar": "5.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-typescript": "7.6.0",
    "@types/jest": "24.0.18",
    "@types/node": "10.14.1",
    "@types/rimraf": "2.0.2",
    "@types/tar": "4.0.3",
    "@typescript-eslint/eslint-plugin": "2.3.2",
    "@typescript-eslint/parser": "2.3.2",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "typescript": "3.6.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
